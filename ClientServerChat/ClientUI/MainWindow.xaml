<!-- ClientWindow.xaml -->
<Window x:Class="ClientUI.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Client" Height="350" Width="500">
    <Grid>
        <TextBox x:Name="messageTextBox" HorizontalAlignment="Left" Height="50" Margin="10,240,0,0" VerticalAlignment="Top" Width="300"/>
        <Button Content="Send" HorizontalAlignment="Left" Margin="324,255,0,0" VerticalAlignment="Top" Width="75" Click="SendButton_Click"/>
        <TextBox x:Name="logTextBox" HorizontalAlignment="Right" Height="215" Margin="0,20,190,0" VerticalAlignment="Top" Width="281" IsReadOnly="True"/>
        <TextBox x:Name="usernameTextBox" HorizontalAlignment="Left" Margin="324,63,0,0" VerticalAlignment="Top" Width="150"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="362,86,0,0" VerticalAlignment="Top" Width="74" Click="LoginButton_Click"/>
        <ListBox x:Name="clientsListBox" SelectionMode="Single" Margin="322,117,10,84" />
    </Grid>
</Window>